      font-size: 16px;
      font-weight: 600;
      color: var(--powerbi-text);
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .insight-item {
      font-size: 14px;
      color: var(--powerbi-text-light);
      margin-bottom: 4px;
      padding: 4px 0;
      border-left: 3px solid transparent;
      padding-left: 8px;
      transition: all 0.3s ease;
    }

    .insight-item:hover {
      border-left-color: var(--powerbi-primary);
      transform: translateX(4px);
    }

