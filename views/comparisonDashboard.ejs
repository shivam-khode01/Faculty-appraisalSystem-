      background: var(--powerbi-bg);
      color: var(--powerbi-text);
      font-weight: 600;
      padding: 8px 6px;
      text-align: left;
      border-bottom: 1px solid var(--powerbi-border);
      font-size: 11px;
    }

    .powerbi-table td {
      padding: 6px;
      border-bottom: 1px solid var(--powerbi-border);
      color: var(--powerbi-text);
      transition: all 0.3s ease;
    }

    .powerbi-table tr:hover {
      background: rgba(0, 120, 212, 0.1);
      transform: scale(1.01);
    }

