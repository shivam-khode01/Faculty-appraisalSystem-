      display: flex;
      flex-direction: column;
      gap: 12px;
      height: 100%;
    }

    .tag-section {
      flex: 1;
    }

    .tag-section-title {
      font-size: 14px;
      font-weight: 600;
      color: var(--powerbi-text);
      margin-bottom: 8px;
    }

    .tags-wrapper {
      display: flex;
      flex-wrap: wrap;
      gap: 4px;
      max-height: 120px;
      overflow-y: auto;
    }

