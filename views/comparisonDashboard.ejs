        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .chart-card {
      animation: fadeInUp 0.6s ease-out;
    }

    .chart-card:nth-child(1) { animation-delay: 0.1s; }
    .chart-card:nth-child(2) { animation-delay: 0.2s; }
    .chart-card:nth-child(3) { animation-delay: 0.3s; }
    .chart-card:nth-child(4) { animation-delay: 0.4s; }
    .chart-card:nth-child(5) { animation-delay: 0.5s; }
    .chart-card:nth-child(6) { animation-delay: 0.6s; }

    /* Responsive adjustments */
    @media (max-width: 1200px) {
      .dashboard-grid {
        grid-template-columns: 1fr 1fr;
        grid-template-rows: auto 1fr 1fr 1fr;
      }
      
      .chart-card:last-child {
        grid-column: 1 / -1;
      }
    }

    @media (max-width: 768px) {
      .dashboard-container {
        padding: 8px;
        gap: 8px;
      }
      
      .dashboard-grid {
        grid-template-columns: 1fr;
        grid-template-rows: auto repeat(5, 1fr);
      }
      
      .insights-panel {
        grid-column: 1;
      }
      
      body {
        overflow-y: auto;
      }
      
      .dashboard-container {
        height: auto;
        min-height: 100vh;
      }
      
      .header {
        padding: 12px;
        flex-direction: column;
        gap: 8px;
        text-align: center;
      }
      
      .header-title {
        font-size: 18px;
      }
      
      .chart-card {
        padding: 12px;
      }
    }

    /* Loading state */
    .loading {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100px;
      color: var(--powerbi-text-light);
    }

    .loading::before {
      content: '';
      width: 16px;
      height: 16px;
      border: 2px solid var(--powerbi-border);
      border-top: 2px solid var(--powerbi-primary);
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-right: 8px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Scrollbar styling */
    ::-webkit-scrollbar {
      width: 6px;
      height: 6px;
    }

    ::-webkit-scrollbar-track {
      background: var(--powerbi-bg);
    }

    ::-webkit-scrollbar-thumb {
      background: var(--powerbi-border);
      border-radius: 3px;
      transition: all 0.3s ease;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: var(--powerbi-text-light);
    }

    /* Reduced motion support */
    @media (prefers-reduced-motion: reduce) {
      * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
      }
    }
  </style>
</head>
<body>
<div class="dashboard-container" id="dashboard">
  <!-- Header -->
  <div class="header">
    <h1 class="header-title">üìä Department Analytics Dashboard</h1>
    <div class="header-actions">
      <button class="btn-powerbi" onclick="downloadPDF()">üì• Export PDF</button>
      <a href="/admin/profiles" class="btn-secondary-powerbi">‚Üê Back</a>
    </div>
  </div>

  <!-- Main Grid -->
  <div class="dashboard-grid">
    <!-- Insights Panel - Full Width -->
    <div class="insights-panel">
      <div class="insights-title">üí° Key Insights</div>
      <div id="insights"></div>
    </div>

    <!-- Bar Chart -->
    <div class="chart-card">
      <div class="chart-title">üìä Performance Metrics</div>
      <div class="chart-container-powerbi">
        <canvas id="barChart"></canvas>
      </div>
    </div>

    <!-- Radar Chart -->
    <div class="chart-card">
      <div class="chart-title">üéØ Department Comparison</div>
      <div class="chart-container-powerbi">
        <canvas id="radarChart"></canvas>
      </div>
    </div>

    <!-- Line Chart -->
    <div class="chart-card">
      <div class="chart-title">üìà Trends Overview</div>
      <div class="chart-container-powerbi">
        <canvas id="lineChart"></canvas>
      </div>
    </div>

    <!-- Tags -->
    <div class="chart-card">
      <div class="chart-title">üß† Strengths & Areas</div>
      <div class="tags-container" id="tagCloud">
        <div class="tag-section">
          <div class="tag-section-title">‚úÖ Strengths</div>
          <div class="tags-wrapper" id="strengthsContainer">
            <!-- Strengths will be populated by JavaScript -->
          </div>
        </div>
        <div class="tag-section">
          <div class="tag-section-title">‚ö†Ô∏è Improvements</div>
          <div class="tags-wrapper" id="weaknessesContainer">
            <!-- Weaknesses will be populated by JavaScript -->
          </div>
        </div>
      </div>
    </div>

    <!-- Data Table -->
    <div class="chart-card">
      <div class="chart-title">üìã Department Stats</div>
      <div class="table-container">
        <table class="powerbi-table" id="departmentTable">
          <thead>
            <tr>
              <th>Department</th>
              <th>Papers</th>
              <th>Workshops</th>
              <th>Awards</th>
              <th>Teaching</th>
              <th>Feedback</th>
            </tr>
          </thead>
          <tbody id="tableBody">
            <!-- Table data will be populated by JavaScript -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  const stats = <%- JSON.stringify(departmentStats) %>;
  const strengths = <%- JSON.stringify(strengths) %>;
  const weaknesses = <%- JSON.stringify(weaknesses) %>;

  const labels = Object.keys(stats);
  const papers = labels.map(d => stats[d].papers);
  const workshops = labels.map(d => stats[d].workshops);
  const awards = labels.map(d => stats[d].awards);
  const teaching = labels.map(d => stats[d].teaching);
  const feedback = labels.map(d => stats[d].feedback);

  Chart.defaults.color = '#605e5c';
  Chart.defaults.borderColor = '#edebe9';
  Chart.defaults.backgroundColor = 'rgba(0, 120, 212, 0.8)';

  // BAR CHART
  new Chart(document.getElementById('barChart'), {
    type: 'bar',
    data: {
      labels,
      datasets: [
        { label: 'Papers', data: papers, backgroundColor: '#0078d4' },
        { label: 'Workshops', data: workshops, backgroundColor: '#00bcf2' },
        { label: 'Awards', data: awards, backgroundColor: '#107c10' }
      ]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'bottom',
          labels: { usePointStyle: true, padding: 15, font: { size: 11 } }
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          grid: { color: '#edebe9' },
          ticks: { font: { size: 10 } }
        },
        x: {
          grid: { display: false },
          ticks: { font: { size: 10 } }
        }
      }
    }
  });

  // RADAR CHART
  new Chart(document.getElementById('radarChart'), {
    type: 'radar',
    data: {
      labels: ['Research', 'Teaching', 'Feedback'],
      datasets: labels.map((dept, i) => ({
        label: dept,
        data: [papers[i], teaching[i], feedback[i] * 10],
        fill: true,
        backgroundColor: `hsla(${i * 60}, 70%, 50%, 0.2)`,
        borderColor: `hsl(${i * 60}, 70%, 50%)`,
        borderWidth: 2
      }))
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'bottom',
          labels: { usePointStyle: true, padding: 10, font: { size: 10 } }
        }
      },
      scales: {
        r: {
          beginAtZero: true,
          grid: { color: '#edebe9' },
          pointLabels: { font: { size: 10 } },
          ticks: { font: { size: 9 } }
        }
      }
    }
  });

  // LINE CHART (Dummy trend for demo)
  new Chart(document.getElementById('lineChart'), {
    type: 'line',
    data: {
      labels: ['Q1 2024', 'Q2 2024', 'Q3 2024', 'Q4 2024'],
      datasets: [{
        label: 'Performance Trend',
        data: [75, 80, 78, 85],
        fill: true,
        backgroundColor: 'rgba(0, 120, 212, 0.1)',
        borderColor: '#0078d4',
        borderWidth: 2,
        tension: 0.4
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: { display: false }
      },
      scales: {
        y: {
          beginAtZero: true,
          grid: { color: '#edebe9' },
          ticks: { font: { size: 10 } }
        },
        x: {
          grid: { display: false },
          ticks: { font: { size: 10 } }
        }
      }
    }
  });

// INSIGHTS SECTION
const topResearch = labels[papers.indexOf(Math.max(...papers))];
const lowTeaching = labels[teaching.indexOf(Math.min(...teaching))];
const avgFeedback = (feedback.reduce((a, b) => a + b, 0) / feedback.length).toFixed(2);
const totalWorkshops = workshops.reduce((a, b) => a + b, 0);

  const insights = [
    `üèÜ Top research department: <strong>${topResearch}</strong> with ${Math.max(...papers)} papers`,
    `üìö ${lowTeaching} has potential for increased teaching engagement`,
    `üìä Average department feedback rating: <strong>${avgFeedback}</strong>`,
    `üéØ Total workshops conducted: <strong>${totalWorkshops}</strong>`
  ];
  document.getElementById('insights').innerHTML = insights.map(i => `<div class="insight-item">${i}</div>`).join('');

// TAG CLOUDS (Limit to top 5)
document.getElementById('strengthsContainer').innerHTML = strengths.slice(0, 3).map(s => `<span class="powerbi-tag">${s}</span>`).join('');
document.getElementById('weaknessesContainer').innerHTML = weaknesses.slice(0, 3).map(w => `<span class="powerbi-tag">${w}</span>`).join('');

  // TABLE
  const tableBody = document.getElementById('tableBody');
  tableBody.innerHTML = labels.map(dept => `
    <tr>
      <td><strong>${dept}</strong></td>
      <td>${stats[dept].papers}</td>
      <td>${stats[dept].workshops}</td>
      <td>${stats[dept].awards}</td>
      <td>${stats[dept].teaching}</td>
      <td>${stats[dept].feedback}</td>
    </tr>
  `).join('');

  // PDF EXPORT
  async function downloadPDF() {
    const { jsPDF } = window.jspdf;
    const canvas = await html2canvas(document.getElementById("dashboard"));
    const imgData = canvas.toDataURL("image/png");
    const pdf = new jsPDF("l", "mm", "a4");
    const pdfWidth = pdf.internal.pageSize.getWidth();
    const pdfHeight = (canvas.height * pdfWidth) / canvas.width;
    pdf.addImage(imgData, "PNG", 0, 0, pdfWidth, pdfHeight);
    pdf.save("powerbi-dashboard-report.pdf");
  }
</script>


</body>
